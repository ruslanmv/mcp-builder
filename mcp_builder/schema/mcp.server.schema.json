{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MCP server bundle manifest (P0)",
  "type": "object",
  "required": ["schemaVersion", "name", "version", "transports"],
  "properties": {
    "schemaVersion": { "type": ["string", "number"] },
    "name": { "type": "string" },
    "version": { "type": "string" },
    "transports": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": { "enum": ["stdio", "sse"] },
          "url": { "type": ["string", "null"] },
          "health": { "type": ["string", "null"] }
        },
        "additionalProperties": true
      }
    },
    "tools": { "type": "array", "items": { "type": ["string", "object"] } },
    "limits": { "type": "object" },
    "security": { "type": "object" },
    "build": { "type": "object" },
    "digest": {
      "type": "object",
      "properties": { "algo": { "type": "string" }, "value": { "type": "string" } },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
