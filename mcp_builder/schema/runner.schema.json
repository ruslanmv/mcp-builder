{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Runner schema (P0)",
  "type": "object",
  "required": ["type"],
  "properties": {
    "type": { "enum": ["stdio", "sse"] },
    "command": { "type": "array", "items": { "type": "string" } },
    "url": { "type": "string" },
    "env": { "type": "object", "additionalProperties": { "type": "string" } },
    "limits": {
      "type": "object",
      "properties": {
        "timeoutMs": { "type": "integer", "minimum": 1000 },
        "maxInputKB": { "type": "integer", "minimum": 1 },
        "maxOutputKB": { "type": "integer", "minimum": 1 }
      },
      "additionalProperties": true
    },
    "security": {
      "type": "object",
      "properties": {
        "readOnlyDefault": { "type": "boolean" },
        "fsAllowlist": { "type": "array", "items": { "type": "string" } },
        "egressAllowlist": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
